{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": false,
    "target": "ESNext",
    "useDefineForClassFields": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "rootDir": ".",
    "paths": {
      "@myvue/*": ["packages/*/src"],
      "myvue": ["packages/vue/src"]
    }
  },
  "include": [
    "packages/*/src",
    "packages/*/__tests__",
  ]
}
